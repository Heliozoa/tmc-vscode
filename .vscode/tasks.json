{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "testBuild",
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "silent"
            },
            "group": "test"
        },
        {
            "label": "webpackBuild",
            "type": "npm",
            "script": "webpack:watch",
            "promptOnClose": false,
            "problemMatcher": {
                "base": "$tsc-watch",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Compilation  startingâ€¦",
                    "endsPattern": "^Compilation  finished"
                }
            },
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "runOptions": {
                "instanceLimit": 1
            }
        }
    ]
}
