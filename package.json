{
	"name": "test-my-code",
	"displayName": "TestMyCode",
	"description": "TestMyCode extension for Visual Studio Code",
	"version": "0.1.1",
	"license": "MIT",
	"publisher": "moocfi",
	"repository": "https://github.com/rage/tmc-vscode",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"tmc",
		"test my code"
	],
	"activationEvents": [
		"workspaceContains:**/TMC-Readme.txt",
		"onView:tmcView",
		"onCommand:closeExercise",
		"onCommand:runTests",
		"onCommand:resetExercise",
		"onCommand:uploadArchive"
	],
	"main": "./dist/extension",
	"contributes": {
		"commands": [
			{
				"command": "tmcView.activateEntry",
				"title": "Activate"
			},
			{
				"command": "closeExercise",
				"title": "TMC - Close exercise"
			},
			{
				"command": "uploadArchive",
				"title": "TMC - Submit solution"
			},
			{
				"command": "resetExercise",
				"title": "TMC - Reset exercise"
			},
			{
				"command": "runTests",
				"title": "TMC - Run tests"
			}
		],
		"keybindings": [
			{
				"command": "runTests",
				"key": "ctrl+shift+t"
			},
			{
				"command": "closeExercise",
				"key": "ctrl+shift+c"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "tmcView.activateEntry",
					"when": "false"
				}
			],
			"editor/title": [
				{
					"command": "runTests",
					"group": "navigation",
					"when": "resourceScheme == file && tmcWorkspaceActive"
				},
				{
					"command": "uploadArchive",
					"group": "navigation",
					"when": "resourceScheme == file && tmcWorkspaceActive"
				},
				{
					"command": "closeExercise",
					"when": "resourceScheme == file && tmcWorkspaceActive"
				},
				{
					"command": "resetExercise",
					"when": "resourceScheme == file && tmcWorkspaceActive"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"title": "TestMyCode",
					"id": "tmc",
					"icon": "media/TMC.png"
				}
			]
		},
		"views": {
			"tmc": [
				{
					"id": "tmcView",
					"name": "Menu"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --config webpack.prod.js",
		"compile": "ttsc -p ./",
		"watch": "ttsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"eslint": "eslint . --ext .js,.ts",
		"eslint:fix": "eslint --fix . --ext .js,.ts",
		"lint": "npm run eslint && npm run prettier",
		"lint:fix": "npm run eslint:fix && npm run prettier:fix",
		"postinstall": "babel node_modules/ts-results --out-dir node_modules/ts-results --plugins=@babel/plugin-transform-modules-commonjs",
		"prettier": "prettier --check --ignore-path \"./.eslintignore\" \"./**/*.{html,js,ts}\"",
		"prettier:fix": "prettier --write --ignore-path \"./.eslintignore\" \"./**/*.{html,js,ts}\"",
		"webpack": "webpack --config webpack.dev.js",
		"webpack:watch": "webpack --config webpack.dev.js --watch --info-verbosity verbose"
	},
	"prettier": {
		"printWidth": 100,
		"tabWidth": 4,
		"trailingComma": "all",
		"arrowParens": "always",
		"endOfLine": "lf"
	},
	"devDependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.8.7",
		"@babel/plugin-transform-modules-commonjs": "^7.8.3",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.29",
		"@types/node-fetch": "^2.5.5",
		"@types/vscode": "^1.43.0",
		"@typescript-eslint/eslint-plugin": "^2.23.0",
		"@typescript-eslint/parser": "^2.23.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-plugin-prettier": "^3.1.2",
		"glob": "^7.1.5",
		"husky": "^4.2.3",
		"lint-staged": "^10.0.8",
		"mocha": "^6.2.2",
		"prettier": "1.19.1",
		"ts-loader": "^6.2.1",
		"ttypescript": "^1.5.10",
		"typemoq": "^2.1.0",
		"typescript": "^3.8.3",
		"vscode-test": "^1.2.2",
		"webpack": "^4.42.0",
		"webpack-cli": "^3.3.11",
		"webpack-merge": "^4.2.2"
	},
	"dependencies": {
		"client-oauth2": "^4.2.5",
		"del": "^5.1.0",
		"form-data": "^3.0.0",
		"handlebars": "^4.7.3",
		"node-fetch": "^2.6.0",
		"ts-results": "^2.0.1",
		"typescript-is": "^0.13.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts}": [
			"prettier --write",
			"eslint --cache --fix --max-warnings 0"
		]
	}
}
